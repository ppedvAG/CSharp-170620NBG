<Window x:Class="BankRottWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankRottWPF"
        mc:Ignorable="d"
        Title="BankRott" Height="180" Width="320" ResizeMode="NoResize">
    <Grid>
        <Label Content="Kontonummer: " HorizontalAlignment="Left" Margin="17,27,0,0" VerticalAlignment="Top"/>
        <Label Content="PIN: " HorizontalAlignment="Left" Margin="17,61,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TextBoxKontonummer" HorizontalAlignment="Left" Height="23" Margin="114,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="182"/>
        <PasswordBox x:Name="PasswordBoxPin" HorizontalAlignment="Left" Margin="114,61,0,0" VerticalAlignment="Top" Width="182" Height="23"/>
        <Button x:Name="ButtonLogin" Content="Login" HorizontalAlignment="Left" Margin="114,101,0,0" VerticalAlignment="Top" Width="182" Click="ButtonLogin_Click"/>

    </Grid>
</Window>
